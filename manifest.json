{
  "manifest_version": 3,
  "name": "Chrome Link Selector",
  "version": "1.0",
  "description": "Select multiple links and open them all at once",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage",
    "commands"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.in/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "commands": {
    "undo": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "Command+Z"
      },
      "description": "Undo last action"
    },
    "redo": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Shift+Z"
      },
      "description": "Redo last undone action"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["attribute-selector.html", "attribute-selector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
